<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:src="@drawable/spidlogo" android:adjustViewBounds="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Unknown user!"
            android:id="@+id/UserTextView" android:layout_centerHorizontal="true" android:layout_below="@+id/imageView"
            android:textColor="#000000" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last login: unknown"
            android:id="@+id/LastLoginTextView" android:layout_centerHorizontal="true"
            android:layout_below="@+id/UserTextView"
            android:textColor="#000000" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token expires at: unknown"
            android:id="@+id/TokenExpiresTextView" android:layout_centerHorizontal="true"
            android:layout_below="@+id/LastLoginTextView"
            android:textColor="#000000" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_below="@+id/TokenExpiresTextView" android:baselineAligned="false"
            android:id="@+id/linearLayout" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/LastLogin"
                android:id="@+id/LastLoginButton"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TokenExpiresTextView" android:singleLine="false"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/RefreshToken"
                android:id="@+id/RefreshTokenButton"
                android:layout_toRightOf="@+id/LastLoginButton" android:layout_below="@+id/TokenExpiresTextView"
                />
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Logout"
            android:id="@+id/button2"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
</RelativeLayout>