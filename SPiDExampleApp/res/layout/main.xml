<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/spidlogo"
            android:adjustViewBounds="true"
            android:contentDescription="@string/SPiDLogo"/>

    <TextView
            android:id="@+id/UserTextView"
            android:text="Welcome Unknown user!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <TextView
            android:id="@+id/RefreshExpiresTextView"
            android:text="Token expires at: unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/UserTextView"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <TextView
            android:id="@+id/OneTimeCodeTextView"
            android:text="One time code: none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/RefreshExpiresTextView"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <Button
            android:id="@+id/RefreshTokenButton"
            android:text="@string/RefreshToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/OneTimeCodeTextView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <Button
            android:id="@+id/OneTimeCodeButton"
            android:text="@string/OneTimeCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/RefreshTokenButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    <Button
            android:id="@+id/LogoutButton"
            android:text="@string/Logout"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/OneTimeCodeButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
</RelativeLayout>